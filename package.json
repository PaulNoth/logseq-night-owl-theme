{
  "name": "logseq-night-owl-theme",
  "version": "1.0.0",
  "description": "Night Owl Theme for Logseq.",
  "author": "Pavol Pidaniƒç",
  "license": "MIT",
  "logseq": {
    "themes": [
      {
        "name": "Night Owl Theme: Light",
        "url": "./custom.css",
        "mode": "light"
      },
      {
        "name": "Night Owl Theme: Dark",
        "url": "./custom.css",
        "mode": "dark"
      }
    ],
    "icon": "./icon.png",
